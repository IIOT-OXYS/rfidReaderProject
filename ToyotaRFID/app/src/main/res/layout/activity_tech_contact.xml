<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nzar.toyotarfid.TechContact"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="238dp"
        android:layout_height="112dp"
        android:background="#D0D2D3"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#434343"
        android:textSize="80sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="RtlHardcoded" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription=""
        android:src="@drawable/tiltlab_banner"
        tools:ignore="ContentDescription"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/tech_back_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="238dp"
        android:layout_height="112dp"
        android:background="#434343"
        android:filterTouchesWhenObscured="false"
        android:text="@string/cancel"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="normal"
        tools:ignore="MissingConstraints,RtlHardcoded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/tech_page_button"
        android:layout_width="500dp"
        android:layout_height="112dp"
        android:background="#E55125"
        android:text="Page Working Tech"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tech_back_button"
        app:layout_constraintRight_toLeftOf="@+id/textClock" />



    <ImageView
        android:id="@+id/LabTechImage"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="238dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="238dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        android:orientation="vertical"
        app:layout_constraintGuide_end="238dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="786dp" />

    <TextView
        android:id="@+id/LabTechEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/LabTechName"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/LabTechPhoneNumber"
        app:layout_constraintLeft_toRightOf="@+id/LabTechImage"
        android:layout_marginLeft="24dp"
        app:layout_constraintVertical_bias="0.511" />

    <TextView
        android:id="@+id/LabTechPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="number"
        app:layout_constraintLeft_toRightOf="@+id/LabTechImage"
        android:layout_marginLeft="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/LabTechImage"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/LabTechName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        app:layout_constraintLeft_toRightOf="@+id/LabTechImage"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="@+id/LabTechImage"
        android:layout_marginTop="0dp" />

</android.support.constraint.ConstraintLayout>
