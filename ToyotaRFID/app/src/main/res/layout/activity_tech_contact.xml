<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nzar.toyotarfid.TechContact"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="281dp"
        android:layout_height="108dp"
        android:background="#D0D2D3"
        android:textColor="#434343"
        android:fontFamily="sans-serif"
        android:paddingTop="10dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="80sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="RtlHardcoded" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription=""
        android:src="@drawable/tiltlab_banner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/tech_back_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:background="#434343"
        android:filterTouchesWhenObscured="false"
        android:text="@string/cancel"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="normal"
        tools:ignore="MissingConstraints,RtlHardcoded"
        app:layout_constraintRight_toLeftOf="@+id/tech_page_button"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="4dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tech_page_button" />

    <Button
        android:id="@+id/tech_page_button"
        android:layout_width="400dp"
        android:layout_height="116dp"
        android:text="Page Working Tech"
        android:textSize="30sp"
        android:background="#E55125"
        android:textColor="#FFFFFF"
        app:layout_constraintRight_toLeftOf="@+id/textClock"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="41dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toTopOf="@+id/textClock" />

    <TextView
        android:id="@+id/LabTechEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/LabTechPhoneNumber"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/LabTechName"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/LabTechPhoneNumber" />

    <TextView
        android:id="@+id/LabTechPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="number"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/LabTechEmail"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/LabTechImage" />

    <TextView
        android:id="@+id/LabTechName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/LabTechEmail"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/LabTechEmail" />

    <ImageView
        android:id="@+id/LabTechImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="363dp"
        app:layout_constraintBottom_toBottomOf="@+id/LabTechName"
        app:layout_constraintTop_toBottomOf="@+id/LabTechName"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
