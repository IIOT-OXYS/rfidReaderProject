<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nzar.toyotarfid.SettingsActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp"
    android:id="@+id/activity_settings_root_layout">


    <Button
        android:id="@+id/set_button"
        android:layout_width="234dp"
        android:layout_height="112dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="-2dp"
        android:background="#659941"
        android:text="@string/set"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/SettingsCancelButton"
        android:layout_width="234dp"
        android:layout_height="112dp"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:autoText="true"
        android:background="#434343"
        android:text="Cancel"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/set_button" />

    <Button
        android:id="@+id/SettingsLaunchUpdateButton"
        android:layout_width="234dp"
        android:layout_height="112dp"
        android:layout_marginStart="30dp"
        android:background="#FBB040"
        android:text="Update"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/SettingsResetButton"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/SettingsResetButton"
        android:layout_width="234dp"
        android:layout_height="112dp"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:background="#BE1E2D"
        android:text="Reset"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/SettingsCancelButton" />

    <EditText
        android:id="@+id/machineID"
        android:layout_width="500dp"
        android:layout_height="80dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Machine ID"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/baseServerUrl"
        android:layout_width="500dp"
        android:layout_height="80dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="API Server IP/URL"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/machineID"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/machineID"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/machineID"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>
