<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nzar.toyotarfid.SettingsActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/db_url"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Database URL"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/db_pw"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/db_pw"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/db_pw" />

    <EditText
        android:id="@+id/db_user"
        android:layout_width="681dp"
        android:layout_height="96dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Database Username"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/db_port"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="17dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/db_pw"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Database Password"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/db_user"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/db_user"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/db_user" />

    <EditText
        android:id="@+id/static_ip"
        android:layout_width="0dp"
        android:layout_height="97dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Static IP Address"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/db_url"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/db_url"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/db_url" />

    <EditText
        android:id="@+id/db_port"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Port"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/db_user"
        android:layout_marginTop="7dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/db_user"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/set_button"
        android:layout_width="238dp"
        android:layout_height="252dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Set"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/back_button"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="238dp"
        android:layout_height="253dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="260dp" />

</android.support.constraint.ConstraintLayout>
